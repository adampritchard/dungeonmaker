generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Dungeon {
  id    Int      @id @default(autoincrement())
  name  String?  @default("untitled")

  // TODO: Json datatype not supported by SQLite
  tiles String?
}

model User {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  password  String
}
